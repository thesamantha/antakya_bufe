doctype html
html
  head
    style
      |  table
         td, th { border: 1px solid #dddddd; text-align: left; padding: 8px; }

form method="POST" id="order_form"

div
  table
    tr
      td border="1px solid #ddd"
        img> src="/doner.jpg" alt="döner" width="100" height="70"
      td
        text> Döner
      td
        text> 1800 Ft
      td
        label> Order
        input type="checkbox" name="doner" form="order_form"

    tr
      td
        img> src="/falafel.jpg" alt="falafel" width="100" height="70"
      td
        text> Falafel
      td
        text> 1500 Ft
      td
        label> Order
        input type="checkbox" name="falafel" form="order_form"

div
  input type="submit" form="order_form"
