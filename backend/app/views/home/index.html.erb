    <title>Antakya Török Büfé - Budaörs</title>
    <link rel="stylesheet" href="antakyahome_mobile.css">
    <link rel="stylesheet" href="antakyahome_tablet.css">
    <link rel="stylesheet" href="antakyahome_full_screen.css">
  </head>
  <body>
    <header>
      <!--Információk-->
      <h2>Antakya Török Büfé - Budaörs</h2>
      <pre>
      2040 Budaörs Szabadság út 55.
         Tel.:06 70 251 1255
      rendeles.antakya@gmail.com
      (még nem aktív a rendelés)</pre>
      <pre id="open_hours">
      <ins>Nyitvatartás:</ins>
      Hétfő      10:30-16:00
      Kedd       10:30-16:00
      Szerda     10:30-16:00
      Csütörtök  10:30-16:00
      Péntek     10:30-16:00
      Szombat    Zárva
      Vasárnap   Zárva</pre>

      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
              <%= value %>
        </div>
      <% end %>
    </header>

    <nav>

      <!--Menü-->

      <ul>
        <li><a href="antakyahome.html">Kezdőlap</a></li>
        <li><a href="antakya_order.html">Étlap/Rendelés(később)</a></li>
        <li><a href="antakya_we.html">Rólunk</a></li>
        <li><a href="antakya_intresting.html">Érdekességek</a></li>
        <li><a href="antakya_akciok.html">Akciók</a></li>
      </ul>

    </nav>
    <hr>

    <main>
      <!--Bejelentkező div-->
      <div class="login-box">
        <p>Kérjük, hogy az egyéni kedvezményekhez és a gyorsabb rendeléshez jelentkezzen be. Ha nincs fiókja regisztráljon.</p>
        <button type="button" name="login" class="login" onclick="document.getElementById('id01').style.display = 'block'">Bejelentkezés</button>
        <button type="button" name="registration-link" class="registration-link"><a href="#">Regisztráció</a></button>
      </div>

      <!--Felugró bejelentkező ablak-->
      <div class="modal" id="id01">
        <p id="alert"><%= alert %></p>

        <%= form_tag(sessions_path, class: "modal-content animate") do |form| %>
          <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display = 'none'" class="close" title="Close Modal">&times;</span> <!--X-gomb-->
            <img src="img_avatar.png" alt="avatár-kép" class="avatar"><!--avatár-kép-->
          </div>
          <div class="container">
            <%= label_tag 'email', 'Felhasználónév' %>
            <%= text_field_tag 'email', nil, placeholder: 'Írja be a felhasználónevét!', required: true %>

            <%= label_tag 'password', 'Jelszó' %>
            <%= password_field_tag 'password', nil, placeholder: "Írja be a jelszavát!", required: true %>

            <%= submit_tag "Bejelentkezés", class: "bej" %>

            <%= label_tag 'remember', 'Emlékezz rám' %>
            <%= check_box_tag "remember", "yes" %>
          </div>

          <div class="container">
            <button type="button" onclick="document.getElementById('id01').style.display = 'none'" class="cancelbtn">Mégse</button>
            <span class="psw"><a href="###">Elfelejtette jelszavát?</a></span>
          </div>
        <% end %>

      </div>


      <% if current_user %>
        <%= form_tag(sessions_path, class: "modal-content animate") do |form| %>
          <%= text_field_tag 'news', 'Írjon be valamit' %>
        <% end %>
        <%= link_to "Kilépés", logout_path %>
      <% end %>
    </main>
    <hr>

    <footer>
      <!--Térkép-->
      <div class="googlemaps">

      </div>

      <div class="social-media">

      </div>

      <!--Információk a lap alján is legyenek-->
      <div class="footer-infos">
        <pre>
          2040 Budaörs Szabadság út 55.
          Tel.:06 70 251 1255
          rendeles.antakya@gmail.com
          (még nem aktív a rendelés)</pre>
          <pre id="open_hours2">
            <ins>Nyitvatartás:</ins>
            Hétfő      10:30-16:00
            Kedd       10:30-16:00
            Szerda     10:30-16:00
            Csütörtök  10:30-16:00
            Péntek     10:30-16:00
            Szombat    Zárva
            Vasárnap   Zárva
          </pre>
        </div>
    </footer>

<script src="bejelentkezo-ablak.js"></script>



  </body>
</html>
